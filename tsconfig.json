{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "react-native-calendar-events-native": ["./src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}